
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>头部</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        /*.left-sidebar-pro {
            width: 200px;
            float: left;
        }

        #sidebar {
            background-color: black;
        }*/
        .right {
            left: 750px;
        }
    </style>

</head>

<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("应用程序名称", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                    <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>

                    <li class="dropdown right">
                        <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa big-icon fa-desktop icon-wrap"></i>&nbsp;当前登录
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="javascript:void(0)" onclick="AccountSetting.Add();"><i class="fa big-icon fa-home icon-wrap"></i>&nbsp;@*@ViewBag.CurrentLoginUser.UserName*@用户名</a></li>
                            <li><a href="javascript:void(0)" onclick="AccountSetting.Edit();"><i class="fa big-icon fa-pie-chart icon-wrap"></i>&nbsp;修改密码</a></li>
                            <li><a href="/Home/LoginOut"><i class="fa big-icon fa-desktop icon-wrap"></i>&nbsp;退出系统</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</body>
</html>
